{
	"name": "cardcom-ts-sdk",
	"description": "Unofficial TypeScript wrapper for the Cardcom REST API.",
	"version": "1.1.0",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mosherivkin/cardcom-ts-sdk.git"
	},
	"author": "Moshe Rivkin",
	"license": "MIT",
	"keywords": [
		"cardcom",
		"typescript",
		"sdk",
		"api",
		"payments"
	],
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"typegen": "bunx openapi-typescript ./data/swagger.json -o ./src/schema.ts"
	},
	"devDependencies": {
		"@types/bun": "^1.2.23",
		"bunup": "^0.14.9",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"dependencies": {
		"openapi-fetch": "^0.14.0"
	}
}